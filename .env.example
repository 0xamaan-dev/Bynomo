# BNB Smart Chain Configuration
# Network: 'mainnet' for production, 'testnet' for development
NEXT_PUBLIC_BNB_NETWORK=mainnet
# RPC endpoint for BNB Chain (use public node or your own)
NEXT_PUBLIC_BNB_RPC_ENDPOINT=https://bsc-dataseed.binance.org/
# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Privy Configuration (Social login & wallet provider)
# Get your Privy App ID and Secret from https://dashboard.privy.io/
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Treasury Configuration
# Main BNB treasury address (where deposits are sent)
NEXT_PUBLIC_TREASURY_ADDRESS=0xYourTreasuryAddressHere
# Treasury private key (KEEP SECRET! Backend only, never expose to client)
BNB_TREASURY_SECRET_KEY=your_treasury_private_key

# Optional: BynomoOptional contract for on-chain interaction
# Leave blank if not using the optional contract
NEXT_PUBLIC_OPTIONAL_CONTRACT_ADDRESS=

# Application Configuration
NEXT_PUBLIC_APP_NAME=Bynomo
# Default round duration in seconds
NEXT_PUBLIC_ROUND_DURATION=30
# Price update interval in milliseconds
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=1000
# Chart time window in milliseconds (5 minutes)
NEXT_PUBLIC_CHART_TIME_WINDOW=300000

# Supabase Configuration (Database & Auth)
# Get from https://app.supabase.com/ project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
